<legend>Log In</legend>

<% if flash[:alert] %>
  <p class="alert alert-warning"><%= flash[:alert] %></p>
<% end %>

<%= form_tag(sessions_path, {class: 'form-horizontal'}) do %>

  <div class="form-group">
    <%= label_tag :email, "Email", {class: "col-md-2 control-label"}  %>
    <div class="col-md-10">
      <%= text_field_tag :email, params[:email], class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :password, "Password" ,class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= password_field_tag :password, params[:password], class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= submit_tag "Login" , class: "btn btn-default" %>
    </div>
  </div>

<% end %>
