<legend>Reset Password</legend>

<%= form_for @user, url: password_reset_path(params[:id]), html: { class: 'form-horizontal' } do |f| %>
  <% if @user.errors.any? %>

    <div class="alert alert-danger alert-dismissible" role="alert" >
        <ul class="list-unstyled">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    </div>

  <% end %>

  <div class="form-group">
    <%= f.label :password, class: "col-md-2 control-label" %>
    <div class="col-md-10">
      <%= f.password_field :password, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-md-2 control-label"   %>
    <div class="col-md-10">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>


  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit "Update Password" , class: "btn btn-default" %>
    </div>
  </div>
<% end %>
